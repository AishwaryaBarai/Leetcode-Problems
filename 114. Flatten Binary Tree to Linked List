class Solution:
    def flatten(self, root: TreeNode) -> None:
        if not root:
            return root

        h = root
        stack = [root.right, root.left]
        h.left = None
        while stack:
            node = stack.pop()
            if node:
                stack+=[node.right, node.left]
                h.right = node
                h.left = None
                h = h.right

        return root
