class Solution:
    def levelOrder(self, root: TreeNode) -> List[List[int]]:
        ans = []
        def traversal(level, node):
            if node:
                if len(ans) <= level:
                    ans.append([node.val])
                else:
                    ans[level].append(node.val)

                traversal(level+1, node.left)
                traversal(level+1, node.right)

        traversal(0, root)

        return ans
